  "shortcuts": [
    {
      "name": "Register Device",
      "short_name": "Register",
      "description": "Quick access to device registration",
      "url": "/stolen-app-lovable/register-device",
      "icons": [
        {
          "src": "/stolen-app-lovable/icon-192x192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Check Device",
      "short_name": "Check",
      "description": "Verify device authenticity",
      "url": "/stolen-app-lovable/check-device",
      "icons": [
        {
          "src": "/stolen-app-lovable/icon-192x192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Marketplace",
      "short_name": "Market",
      "description": "Browse and buy devices",
      "url": "/stolen-app-lovable/marketplace",
      "icons": [
        {
          "src": "/stolen-app-lovable/icon-192x192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Lost & Found",
      "short_name": "Lost",
      "description": "Report lost or found devices",
      "url": "/stolen-app-lovable/lost-found-report",
      "icons": [
        {
          "src": "/stolen-app-lovable/icon-192x192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "My Devices",
      "short_name": "Devices",
      "description": "Manage your registered devices",
      "url": "/stolen-app-lovable/my-devices",
      "icons": [
        {
          "src": "/stolen-app-lovable/icon-192x192.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/stolen-app-lovable/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "device_image",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "related_applications": [],
  "prefer_related_applications": false,
  "widgets": [
    {
      "name": "Device Status",
      "short_name": "Status",
      "description": "Quick view of your registered devices",
      "tag": "device-status",
      "template": "{{device_count}} devices registered",
      "ms_ac_template": "{{device_count}} devices",
      "data": {
        "device_count": 0
      },
      "type": "text",
      "screenshots": [
        {
          "src": "/stolen-app-lovable/widget-screenshot.png",
          "sizes": "400x200",
          "type": "image/png",
          "label": "Device Status Widget"
        }
      ]
    }
  ],
  "scope_extensions": [],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+stolen",
      "url": "/stolen-app-lovable/device?q=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/stolen-app-lovable/upload",
      "accept": {
        "image/*": [".png", ".jpg", ".jpeg", ".webp"],
        "application/pdf": [".pdf"]
      }
    }
  ],
  "handle_links": "preferred"
}

