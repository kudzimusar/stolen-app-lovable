# ============================================================================
# STOLEN PLATFORM - PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================================================
# Production environment variables for the coherence enforcer tool
# ============================================================================

# ============================================================================
# AI SERVICE CONFIGURATION (PRODUCTION)
# ============================================================================
NVIDIA_NIM_API_KEY=${NVIDIA_NIM_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
GROQ_API_KEY=${GROQ_API_KEY}
GEMINI_API_KEY=${GEMINI_API_KEY}

# ============================================================================
# COHERENCE ENFORCER CONFIGURATION
# ============================================================================
COHERENCE_ENFORCER_ENABLED=true
COHERENCE_ENFORCER_STRICT_MODE=true
COHERENCE_ENFORCER_MAX_FILES=100
COHERENCE_ENFORCER_TIMEOUT=60000
COHERENCE_ENFORCER_CACHE_ENABLED=true
COHERENCE_ENFORCER_CACHE_TTL=3600

# ============================================================================
# MONITORING AND ALERTING
# ============================================================================
COHERENCE_MONITORING_ENABLED=true
COHERENCE_ALERT_WEBHOOK_URL=${COHERENCE_ALERT_WEBHOOK_URL}
COHERENCE_ALERT_EMAIL=${COHERENCE_ALERT_EMAIL}
COHERENCE_ALERT_SLACK_WEBHOOK=${COHERENCE_ALERT_SLACK_WEBHOOK}

# ============================================================================
# REPORTING CONFIGURATION
# ============================================================================
COHERENCE_REPORTS_DIR=./coherence-reports
COHERENCE_REPORTS_RETENTION_DAYS=30
COHERENCE_REPORTS_FORMAT=json
COHERENCE_REPORTS_COMPRESS=true

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================
COHERENCE_ANALYSIS_BATCH_SIZE=10
COHERENCE_ANALYSIS_PARALLEL=true
COHERENCE_ANALYSIS_CACHE_SIZE=1000
COHERENCE_ANALYSIS_MEMORY_LIMIT=512

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
COHERENCE_SECURITY_AUDIT=true
COHERENCE_SECURITY_SCAN=true
COHERENCE_SECURITY_REPORT=true
COHERENCE_SECURITY_BLOCK_ON_CRITICAL=true
