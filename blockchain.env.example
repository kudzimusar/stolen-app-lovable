# Blockchain Configuration for Real Polygon Integration
# Copy these values to your .env file

# Your private key (NEVER commit this!)
# Get from MetaMask: Settings > Security & Privacy > Show Private Key
PRIVATE_KEY=your_private_key_here

# Polygon Mumbai Testnet RPC (FREE)
POLYGON_MUMBAI_RPC=https://rpc-mumbai.maticvigil.com

# Polygon Mainnet RPC (FREE)
POLYGON_RPC=https://polygon-rpc.com

# Alternative FREE RPC endpoints
# POLYGON_MUMBAI_RPC=https://matic-mumbai.chainstacklabs.com
# POLYGON_RPC=https://rpc-mainnet.matic.network

# PolygonScan API Key (FREE - get from https://polygonscan.com/apis)
POLYGONSCAN_API_KEY=your_api_key_here

# Deployed contract address (fill this after deploying)
VITE_DEVICE_REGISTRY_ADDRESS=

# Network (mumbai for testnet, polygon for mainnet)
VITE_BLOCKCHAIN_NETWORK=mumbai

